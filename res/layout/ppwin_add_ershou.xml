<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:gravity="center_vertical">
    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@color/backgroud_grey"
            android:id="@+id/add_btn_zrqg">
        <LinearLayout
                android:id="@+id/close_add_more_es"
                android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="16dp"
                      android:background="@drawable/common_btn"
                      android:clickable="true">
            <ImageView
                    android:id="@+id/close_add_more_es_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_close_add_more"
                    android:contentDescription="@null"
                    />
        </LinearLayout>
        <Button
                android:id="@+id/add_btn_eszr"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/common_btn"
                android:layout_toRightOf="@id/close_add_more_es"
                android:layout_marginLeft="1dp"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:text="@string/es_add_zr"/>
        <Button
                android:id="@+id/add_btn_esqg"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/common_btn"
                android:layout_toRightOf="@id/add_btn_eszr"
                android:layout_marginLeft="1dp"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:text="@string/es_add_qg"/>
    </RelativeLayout>
</LinearLayout>